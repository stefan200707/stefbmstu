{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "C++ Launch (lldb)", // Название конфигурации в меню
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}", // Путь к исполняемому файлу
      "args": [], // Аргументы командной строки для программы
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}", // Рабочая директория
      "environment": [],
      "externalConsole": false, // Использовать встроенную консоль VS Code
      "MIMode": "lldb", // Режим отладчика (для macOS)
      "preLaunchTask": "C/C++: clang++ build active file" // Задача для сборки (должна совпадать с label в tasks.json)
    }
  ]
}
